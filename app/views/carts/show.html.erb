<% if notice %>
    <aside id="notice"><%= notice %></aside>

<% end %>

<h2> Shop Cart</h2>

<ul>
    <% @cart.line_items.each do |item| %>
        <li><%= item.quantity %> X <%= item.product.title %></li>
    <% end %>
</ul>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
